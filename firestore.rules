
rules_version = '2';
service cloud.firestore {
  match /databases/{database}/documents {

    // Función para verificar si el usuario ha iniciado sesión
    function isSignedIn() {
      return request.auth != null;
    }

    // Función para verificar si el usuario tiene el rol de administrador
    // Los administradores están registrados en la colección roles_admin con su UID
    function isAdmin() {
      return isSignedIn() && exists(/databases/$(database)/documents/roles_admin/$(request.auth.uid));
    }

    // Regla para perfiles de usuario
    match /users/{userId} {
      allow get: if isSignedIn();
      allow list: if isAdmin();
      allow write: if isAdmin() || (isSignedIn() && request.auth.uid == userId);
    }

    // Regla para la colección de administradores
    match /roles_admin/{userId} {
      allow read: if isSignedIn();
      allow write: if isAdmin();
    }

    // Regla para el padrón docente (Staff)
    match /staff/{staffId} {
      allow read: if isSignedIn();
      allow write: if isAdmin();
    }

    // Regla para el repositorio de documentos (REDSEV)
    // allow read permite tanto get como list
    match /documents/{documentId} {
      allow read: if isSignedIn();
      allow create, update, delete: if isAdmin();
    }
    
    // Forzado de despliegue para corregir error de permisos persistente
    // Última actualización: 2024-05-21 12:05 UTC
  }
}
