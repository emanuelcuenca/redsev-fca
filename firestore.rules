rules_version = '2';
service cloud.firestore {
  match /databases/{database}/documents {

    // REPOSITORIO DE DOCUMENTOS REDSEV
    // El acceso de lectura está permitido a cualquier usuario registrado (autenticado).
    // Las operaciones de escritura (crear, actualizar, eliminar) son exclusivas de administradores.
    match /documents/{documentId} {
      allow get, list: if request.auth != null;
      allow create, update, delete: if request.auth != null && exists(/databases/$(database)/documents/roles_admin/$(request.auth.uid));
    }

    // PERFILES DE USUARIO (CUENTAS REGISTRADAS)
    // Los usuarios registrados pueden leer cualquier perfil y editar el propio.
    match /users/{userId} {
      allow read: if request.auth != null;
      allow write: if request.auth != null && (request.auth.uid == userId || exists(/databases/$(database)/documents/roles_admin/$(request.auth.uid)));
    }

    // ROLES ADMINISTRATIVOS
    // Los administradores registrados controlan el acceso de nivel superior.
    match /roles_admin/{userId} {
      allow read: if request.auth != null;
      allow write: if request.auth != null && exists(/databases/$(database)/documents/roles_admin/$(request.auth.uid));
    }

    // PADRÓN DOCENTE (REFERENCIA INSTITUCIONAL)
    // El padrón es solo de lectura para usuarios registrados para funciones de autocompletado.
    // La edición está limitada exclusivamente a la administración.
    match /staff/{staffId} {
      allow get, list: if request.auth != null;
      allow write: if request.auth != null && exists(/databases/$(database)/documents/roles_admin/$(request.auth.uid));
    }
    
    // Identificador de Despliegue de Seguridad: REDSEV-AUTH-REGISTERED-V4
    // Esta marca asegura que Firestore actualice la caché de reglas para permitir el listado a usuarios registrados.
  }
}