
rules_version = '2';
service cloud.firestore {
  match /databases/{database}/documents {

    function isAdmin() {
      return request.auth != null && exists(/databases/$(database)/documents/roles_admin/$(request.auth.uid));
    }

    function isAuthority() {
      return request.auth != null && (isAdmin() || exists(/databases/$(database)/documents/roles_authority/$(request.auth.uid)));
    }

    // REPOSITORIO DE DOCUMENTOS
    match /documents/{documentId} {
      allow read: if request.auth != null;
      allow write: if isAdmin();
    }

    // PERFILES DE USUARIO
    match /users/{userId} {
      allow read: if request.auth != null;
      allow write: if request.auth != null && (request.auth.uid == userId || isAdmin());
    }

    // ROLES
    match /roles_admin/{userId} {
      allow read: if request.auth != null;
      allow write: if isAdmin();
    }
    match /roles_authority/{userId} {
      allow read: if request.auth != null;
      allow write: if isAdmin();
    }

    // PADRÃ“N DOCENTE
    match /staff/{staffId} {
      allow read: if request.auth != null;
      allow write: if isAdmin();
    }

    // SOLICITUDES DE ACCESO
    match /access_requests/{requestId} {
      allow read: if request.auth != null && (request.auth.uid == resource.data.userId || isAdmin());
      allow create: if request.auth != null;
      allow update, delete: if isAdmin();
    }
    
    // REDSEV-RULES-V17-HIERARCHY
  }
}
