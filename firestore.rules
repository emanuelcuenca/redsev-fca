rules_version = '2';
service cloud.firestore {
  match /databases/{database}/documents {

    // REPOSITORIO DE DOCUMENTOS REDSEV
    // Cualquier usuario de la facultad autenticado puede leer el repositorio
    // Solo los administradores registrados pueden realizar cambios
    match /documents/{documentId} {
      allow read: if request.auth != null;
      allow write: if request.auth != null && exists(/databases/$(database)/documents/roles_admin/$(request.auth.uid));
    }

    // PERFILES DE USUARIO
    // Los usuarios pueden leer perfiles y editar el propio
    // Los administradores tienen control total
    match /users/{userId} {
      allow read: if request.auth != null;
      allow write: if request.auth != null && (request.auth.uid == userId || exists(/databases/$(database)/documents/roles_admin/$(request.auth.uid)));
    }

    // ROLES ADMINISTRATIVOS
    // Lectura para verificación de permisos, escritura restringida a administradores existentes
    match /roles_admin/{userId} {
      allow read: if request.auth != null;
      allow write: if request.auth != null && exists(/databases/$(database)/documents/roles_admin/$(request.auth.uid));
    }

    // PADRÓN DOCENTE (STAFF)
    // Lectura institucional para autocompletado, edición exclusiva para administración
    match /staff/{staffId} {
      allow read: if request.auth != null;
      allow write: if request.auth != null && exists(/databases/$(database)/documents/roles_admin/$(request.auth.uid));
    }
    
    // Identificador de Despliegue de Seguridad: REDSEV-FIX-PERMISSIONS-FINAL-V1
    // Este comentario fuerza el despliegue de las reglas en el motor de Firestore.
  }
}