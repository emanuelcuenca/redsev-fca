
rules_version = '2';
service cloud.firestore {
  match /databases/{database}/documents {

    // Función base para verificar autenticación
    function isSignedIn() {
      return request.auth != null;
    }

    // Función para verificar rol de administrador
    function isAdmin() {
      return isSignedIn() && exists(/databases/$(database)/documents/roles_admin/$(request.auth.uid));
    }

    // Perfiles de usuario: el dueño lee su perfil, admins leen todos
    match /users/{userId} {
      allow get: if isSignedIn();
      allow list: if isAdmin();
      allow write: if isAdmin() || (isSignedIn() && request.auth.uid == userId);
    }

    // Roles administrativos: lectura para verificación, escritura solo admins
    match /roles_admin/{userId} {
      allow read: if isSignedIn();
      allow write: if isAdmin();
    }

    // Padrón docente: lectura pública institucional, edición admins
    match /staff/{staffId} {
      allow read: if isSignedIn();
      allow write: if isAdmin();
    }

    // Repositorio de Documentos REDSEV
    // Se permiten listados y lectura individual a todo personal autenticado
    match /documents/{documentId} {
      allow list: if isSignedIn();
      allow get: if isSignedIn();
      allow create, update, delete: if isAdmin();
    }
    
    // Forzado de despliegue para corrección de error de permisos 
    // ID de Corrección: FIX-AUTH-DOCS-2024-05-21-V2
    // Sincronizado con backend.json
  }
}
