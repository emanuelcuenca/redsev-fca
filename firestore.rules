rules_version = '2';
service cloud.firestore {
  match /databases/{database}/documents {

    // REPOSITORIO DE DOCUMENTOS REDSEV
    // Se permite lectura y escritura a cualquier usuario registrado (autenticado).
    // Esto cumple con la instrucción de otorgar permisos a usuarios registrados.
    match /documents/{documentId} {
      allow read, write: if request.auth != null;
    }

    // PERFILES DE USUARIO
    // Un usuario puede leer cualquier perfil pero solo escribir en el suyo.
    // Los administradores también tienen permiso de escritura sobre perfiles.
    match /users/{userId} {
      allow read: if request.auth != null;
      allow write: if request.auth != null && (request.auth.uid == userId || exists(/databases/$(database)/documents/roles_admin/$(request.auth.uid)));
    }

    // ROLES ADMINISTRATIVOS
    // Se permite lectura a usuarios registrados. La escritura queda limitada a administradores existentes.
    match /roles_admin/{userId} {
      allow read: if request.auth != null;
      allow write: if request.auth != null && exists(/databases/$(database)/documents/roles_admin/$(request.auth.uid));
    }

    // PADRÓN DOCENTE (Solo para referencia y autocompletado)
    // Lectura para todos los registrados, escritura para administradores.
    match /staff/{staffId} {
      allow read: if request.auth != null;
      allow write: if request.auth != null && exists(/databases/$(database)/documents/roles_admin/$(request.auth.uid));
    }
    
    // Identificador de Despliegue de Seguridad: REDSEV-FIX-WRITE-ACCESS-V15
    // Este comentario fuerza la actualización de las reglas en el servidor de Firebase.
  }
}