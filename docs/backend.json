{
  "entities": {
    "User": {
      "$schema": "http://json-schema.org/draft-07/schema#",
      "title": "User",
      "type": "object",
      "description": "Represents a user of the VínculoAgro application, with distinct roles and institutional data.",
      "properties": {
        "id": {
          "type": "string",
          "description": "Unique identifier for the User entity."
        },
        "email": {
          "type": "string",
          "description": "Email address of the user.",
          "format": "email"
        },
        "firstName": {
          "type": "string",
          "description": "First name of the user."
        },
        "lastName": {
          "type": "string",
          "description": "Last name of the user."
        },
        "name": {
          "type": "string",
          "description": "Full name of the user."
        },
        "photoUrl": {
          "type": "string",
          "format": "uri",
          "description": "Optional profile photo URL."
        },
        "academicRank": {
          "type": "string",
          "description": "Cargo docente del usuario.",
          "enum": ["Auxiliar", "JTP", "Adjunto", "Asociado", "Titular"]
        },
        "department": {
          "type": "string",
          "description": "Dependencia académica del usuario.",
          "enum": [
            "Cs. Agrarias",
            "Cs. de la Salud",
            "Cs. Económicas y de Adm.",
            "Cs. Exactas y Naturales",
            "Derecho",
            "Esc. de Arqueología",
            "Humanidades",
            "Tecnología y Cs. Aplicadas"
          ]
        },
        "role": {
          "type": "string",
          "description": "Role within the application.",
          "default": "Viewer"
        },
        "createdAt": {
          "type": "string",
          "format": "date-time"
        },
        "updatedAt": {
          "type": "string",
          "format": "date-time"
        }
      },
      "required": [
        "id",
        "email",
        "firstName",
        "lastName",
        "academicRank",
        "department",
        "role",
        "createdAt",
        "updatedAt"
      ]
    },
    "Document": {
      "$schema": "http://json-schema.org/draft-07/schema#",
      "title": "Document",
      "type": "object",
      "description": "Represents a document stored in the VínculoAgro repository.",
      "properties": {
        "id": {
          "type": "string"
        },
        "title": {
          "type": "string"
        },
        "description": {
          "type": "string"
        },
        "objetivoGeneral": {
          "type": "string"
        },
        "objetivosEspecificos": {
          "type": "array",
          "items": { "type": "string" }
        },
        "fileUrl": {
          "type": "string",
          "format": "uri"
        },
        "fileType": {
          "type": "string"
        },
        "uploadDate": {
          "type": "string",
          "format": "date-time"
        },
        "uploadedByUserId": {
          "type": "string"
        },
        "type": {
          "type": "string",
          "enum": ["Convenio", "Proyecto", "Movilidad", "Pasantía", "Resolución"]
        },
        "extensionDocType": {
          "type": "string",
          "enum": ["Proyecto de Extensión", "Resolución de aprobación", "Informe de avance", "Informe final"]
        },
        "director": {
          "type": "object",
          "properties": {
            "firstName": { "type": "string" },
            "lastName": { "type": "string" }
          },
          "description": "Director del proyecto de extensión con nombre y apellido separados."
        },
        "authors": {
          "type": "array",
          "items": {
            "type": "object",
            "properties": {
              "firstName": { "type": "string" },
              "lastName": { "type": "string" }
            }
          },
          "description": "Equipo técnico o responsables con nombres y apellidos separados."
        },
        "projectCode": {
          "type": "string",
          "description": "Código unificador para proyectos de extensión."
        },
        "date": {
          "type": "string",
          "format": "date"
        },
        "durationYears": {
          "type": "integer"
        },
        "hasAutomaticRenewal": {
          "type": "boolean"
        },
        "counterparts": {
          "type": "array",
          "items": { "type": "string" }
        }
      },
      "required": [
        "id",
        "title",
        "uploadDate",
        "uploadedByUserId",
        "type"
      ]
    }
  },
  "auth": {
    "providers": ["password", "anonymous"]
  },
  "firestore": {
    "structure": [
      {
        "path": "/users/{userId}",
        "definition": {
          "entityName": "User",
          "schema": { "$ref": "#/backend/entities/User" },
          "description": "Perfiles de usuario."
        }
      },
      {
        "path": "/documents/{documentId}",
        "definition": {
          "entityName": "Document",
          "schema": { "$ref": "#/backend/entities/Document" },
          "description": "Repositorio central de documentos."
        }
      }
    ]
  }
}
