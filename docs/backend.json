{
  "entities": {
    "User": {
      "$schema": "http://json-schema.org/draft-07/schema#",
      "title": "User",
      "type": "object",
      "description": "Represents a user of the VínculoAgro application, with distinct roles and institutional data.",
      "properties": {
        "id": {
          "type": "string",
          "description": "Unique identifier for the User entity."
        },
        "email": {
          "type": "string",
          "description": "Email address of the user.",
          "format": "email"
        },
        "firstName": {
          "type": "string",
          "description": "First name of the user."
        },
        "lastName": {
          "type": "string",
          "description": "Last name of the user."
        },
        "name": {
          "type": "string",
          "description": "Full name of the user."
        },
        "photoUrl": {
          "type": "string",
          "format": "uri",
          "description": "Optional profile photo URL."
        },
        "academicRank": {
          "type": "string",
          "description": "Cargo docente del usuario.",
          "enum": ["Auxiliar", "JTP", "Adjunto", "Asociado", "Titular"]
        },
        "department": {
          "type": "string",
          "description": "Dependencia académica del usuario.",
          "enum": [
            "Cs. Agrarias",
            "Cs. de la Salud",
            "Cs. Económicas y de Adm.",
            "Cs. Exactas y Naturales",
            "Derecho",
            "Esc. de Arqueología",
            "Humanidades",
            "Tecnología y Cs. Aplicadas"
          ]
        },
        "role": {
          "type": "string",
          "description": "Role within the application.",
          "default": "Viewer"
        },
        "createdAt": {
          "type": "string",
          "format": "date-time"
        },
        "updatedAt": {
          "type": "string",
          "format": "date-time"
        }
      },
      "required": [
        "id",
        "email",
        "firstName",
        "lastName",
        "academicRank",
        "department",
        "role",
        "createdAt",
        "updatedAt"
      ]
    },
    "Document": {
      "$schema": "http://json-schema.org/draft-07/schema#",
      "title": "Document",
      "type": "object",
      "description": "Represents a document stored in the VínculoAgro repository.",
      "properties": {
        "id": {
          "type": "string"
        },
        "title": {
          "type": "string"
        },
        "description": {
          "type": "string"
        },
        "objetivoGeneral": {
          "type": "string"
        },
        "objetivosEspecificos": {
          "type": "array",
          "items": { "type": "string" }
        },
        "fileUrl": {
          "type": "string",
          "format": "uri"
        },
        "fileType": {
          "type": "string"
        },
        "uploadDate": {
          "type": "string",
          "format": "date-time"
        },
        "uploadedByUserId": {
          "type": "string"
        },
        "type": {
          "type": "string",
          "enum": ["Convenio", "Proyecto", "Movilidad", "Pasantía", "Resolución"]
        },
        "resolutionType": {
          "type": "string",
          "enum": ["CD", "CS", "Decanal", "Ministerial", "Rectoral", "SEU"],
          "description": "Tipo de resolución institucional."
        },
        "date": {
          "type": "string",
          "format": "date"
        },
        "authors": {
          "type": "array",
          "items": { "type": "string" }
        },
        "durationYears": {
          "type": "integer"
        },
        "hasAutomaticRenewal": {
          "type": "boolean",
          "description": "Indica si el convenio posee renovación automática."
        },
        "signingYear": {
          "type": "integer"
        },
        "counterpart": {
          "type": "string"
        },
        "convenioSubType": {
          "type": "string",
          "enum": ["Marco", "Específico"]
        },
        "convenioCategory": {
          "type": "string"
        },
        "beneficiaryName": {
          "type": "string"
        },
        "programName": {
          "type": "string"
        },
        "convocatoria": {
          "type": "string"
        },
        "destinationInstitution": {
          "type": "string"
        },
        "destinationProvince": {
          "type": "string"
        },
        "destinationCountry": {
          "type": "string"
        },
        "projectCode": {
          "type": "string",
          "description": "Código unificador para proyectos de extensión, resoluciones e informes relacionados."
        },
        "extensionDocType": {
          "type": "string",
          "enum": ["Proyecto", "Resolución de aprobación", "Informe de avance", "Informe final"]
        },
        "presentationDate": {
          "type": "string",
          "format": "date"
        },
        "reportPeriod": {
          "type": "string"
        },
        "executionPeriod": {
          "type": "string"
        },
        "hasAssociatedConvenio": {
          "type": "boolean"
        },
        "associatedConvenioNumber": {
          "type": "string"
        },
        "associatedConvenioYear": {
          "type": "integer"
        }
      },
      "required": [
        "id",
        "title",
        "uploadDate",
        "uploadedByUserId",
        "type"
      ]
    }
  },
  "auth": {
    "providers": ["password", "anonymous"]
  },
  "firestore": {
    "structure": [
      {
        "path": "/users/{userId}",
        "definition": {
          "entityName": "User",
          "schema": { "$ref": "#/backend/entities/User" },
          "description": "Perfiles de usuario."
        }
      },
      {
        "path": "/documents/{documentId}",
        "definition": {
          "entityName": "Document",
          "schema": { "$ref": "#/backend/entities/Document" },
          "description": "Repositorio central de documentos."
        }
      }
    ]
  }
}