
{
  "entities": {
    "User": {
      "$schema": "http://json-schema.org/draft-07/schema#",
      "title": "User",
      "type": "object",
      "description": "Represents a registered user of the REDSEV FCA application.",
      "properties": {
        "id": { "type": "string" },
        "email": { "type": "string", "format": "email" },
        "firstName": { "type": "string" },
        "lastName": { "type": "string" },
        "name": { "type": "string" },
        "photoUrl": { "type": "string", "format": "uri" },
        "claustro": { "type": "string", "enum": ["Docente", "No docente", "Estudiante", "Egresado"] },
        "academicRank": { "type": "string", "description": "Used for Docente" },
        "department": { "type": "string", "description": "Used for Docente, No docente, Estudiante (Facultad)" },
        "carrera": { "type": "string", "description": "Used for Estudiante" },
        "profession": { "type": "string", "description": "Used for Egresado" },
        "role": { "type": "string", "enum": ["Admin", "Authority", "User"], "default": "User" },
        "createdAt": { "type": "string", "format": "date-time" },
        "updatedAt": { "type": "string", "format": "date-time" }
      },
      "required": ["id", "email", "firstName", "lastName", "claustro"]
    },
    "AccessRequest": {
      "title": "AccessRequest",
      "type": "object",
      "description": "Request to view a document file by a common user.",
      "properties": {
        "id": { "type": "string" },
        "userId": { "type": "string" },
        "userName": { "type": "string" },
        "userEmail": { "type": "string" },
        "documentId": { "type": "string" },
        "documentTitle": { "type": "string" },
        "status": { "type": "string", "enum": ["pending", "approved", "denied"] },
        "createdAt": { "type": "string" },
        "resolvedAt": { "type": "string" }
      }
    },
    "Staff": {
      "$schema": "http://json-schema.org/draft-07/schema#",
      "title": "Staff",
      "type": "object",
      "description": "Institutional extension staff register (Banco de Extensionistas).",
      "properties": {
        "id": { "type": "string" },
        "firstName": { "type": "string" },
        "lastName": { "type": "string" },
        "claustro": { "type": "string", "enum": ["Docente", "No docente", "Estudiante", "Egresado"] },
        "academicRank": { "type": "string" },
        "department": { "type": "string" },
        "carrera": { "type": "string" },
        "profession": { "type": "string" },
        "email": { "type": "string", "format": "email" },
        "updatedAt": { "type": "string", "format": "date-time" }
      },
      "required": ["firstName", "lastName", "claustro"]
    },
    "Document": {
      "$schema": "http://json-schema.org/draft-07/schema#",
      "title": "Document",
      "type": "object",
      "description": "Represents a document in the REDSEV FCA repository.",
      "properties": {
        "id": { "type": "string" },
        "title": { "type": "string" },
        "type": { "type": "string" },
        "projectCode": { "type": "string" },
        "uploadDate": { "type": "string", "format": "date-time" },
        "uploadedByUserId": { "type": "string" }
      },
      "required": ["id", "title", "type", "uploadDate"]
    }
  },
  "auth": {
    "providers": ["password"]
  },
  "firestore": {
    "/users/{userId}": {
      "schema": { "$ref": "#/backend/entities/User" },
      "description": "Registered user profiles."
    },
    "/staff/{staffId}": {
      "schema": { "$ref": "#/backend/entities/Staff" },
      "description": "Banco de Extensionistas para referencia institucional."
    },
    "/documents/{documentId}": {
      "schema": { "$ref": "#/backend/entities/Document" },
      "description": "Central document repository."
    },
    "/access_requests/{requestId}": {
      "schema": { "$ref": "#/backend/entities/AccessRequest" },
      "description": "Requests for document access."
    },
    "/roles_admin/{userId}": {
      "schema": { "type": "object", "properties": { "assignedAt": { "type": "string" } } },
      "description": "Administrative roles (Full access)."
    },
    "/roles_authority/{userId}": {
      "schema": { "type": "object", "properties": { "assignedAt": { "type": "string" } } },
      "description": "Authority roles (Stats + File access)."
    }
  }
}
