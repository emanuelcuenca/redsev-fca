{
  "entities": {
    "User": {
      "$schema": "http://json-schema.org/draft-07/schema#",
      "title": "User",
      "type": "object",
      "description": "Represents a registered user of the REDSEV FCA application.",
      "properties": {
        "id": { "type": "string" },
        "email": { "type": "string", "format": "email" },
        "firstName": { "type": "string" },
        "lastName": { "type": "string" },
        "name": { "type": "string" },
        "photoUrl": { "type": "string", "format": "uri" },
        "academicRank": { "type": "string" },
        "department": { "type": "string" },
        "role": { "type": "string", "default": "Viewer" },
        "createdAt": { "type": "string", "format": "date-time" },
        "updatedAt": { "type": "string", "format": "date-time" }
      },
      "required": ["id", "email", "firstName", "lastName"]
    },
    "Staff": {
      "$schema": "http://json-schema.org/draft-07/schema#",
      "title": "Staff",
      "type": "object",
      "description": "Institutional teaching staff register (Padr√≥n Docente).",
      "properties": {
        "id": { "type": "string" },
        "firstName": { "type": "string" },
        "lastName": { "type": "string" },
        "academicRank": { "type": "string" },
        "category": { "type": "string", "enum": ["Docente"] },
        "email": { "type": "string", "format": "email" },
        "updatedAt": { "type": "string", "format": "date-time" }
      },
      "required": ["firstName", "lastName", "category"]
    },
    "Document": {
      "$schema": "http://json-schema.org/draft-07/schema#",
      "title": "Document",
      "type": "object",
      "description": "Represents a document in the REDSEV FCA repository.",
      "properties": {
        "id": { "type": "string" },
        "title": { "type": "string" },
        "type": { "type": "string" },
        "projectCode": { "type": "string" },
        "uploadDate": { "type": "string", "format": "date-time" },
        "uploadedByUserId": { "type": "string" }
      },
      "required": ["id", "title", "type", "uploadDate"]
    }
  },
  "auth": {
    "providers": ["password"]
  },
  "firestore": {
    "/users/{userId}": {
      "schema": { "$ref": "#/backend/entities/User" },
      "description": "Registered user profiles."
    },
    "/staff/{staffId}": {
      "schema": { "$ref": "#/backend/entities/Staff" },
      "description": "Institutional staff register for reference."
    },
    "/documents/{documentId}": {
      "schema": { "$ref": "#/backend/entities/Document" },
      "description": "Central document repository."
    },
    "/roles_admin/{userId}": {
      "schema": { "type": "object", "properties": { "assignedAt": { "type": "string" } } },
      "description": "Administrative roles assignment."
    }
  }
}