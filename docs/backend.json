
{
  "entities": {
    "User": {
      "$schema": "http://json-schema.org/draft-07/schema#",
      "title": "User",
      "type": "object",
      "description": "Represents a user of the VínculoAgro application, with distinct roles and institutional data.",
      "properties": {
        "id": { "type": "string" },
        "email": { "type": "string", "format": "email" },
        "firstName": { "type": "string" },
        "lastName": { "type": "string" },
        "name": { "type": "string" },
        "photoUrl": { "type": "string", "format": "uri" },
        "academicRank": { "type": "string", "enum": ["Auxiliar", "JTP", "Adjunto", "Asociado", "Titular"] },
        "department": { "type": "string" },
        "role": { "type": "string", "default": "Viewer" },
        "createdAt": { "type": "string", "format": "date-time" },
        "updatedAt": { "type": "string", "format": "date-time" }
      },
      "required": ["id", "email", "firstName", "lastName", "role"]
    },
    "Staff": {
      "$schema": "http://json-schema.org/draft-07/schema#",
      "title": "Staff",
      "type": "object",
      "description": "Padrón central de personas vinculadas a la facultad (Docentes, Alumnos, etc).",
      "properties": {
        "id": { "type": "string", "description": "ID generado automáticamente." },
        "firstName": { "type": "string" },
        "lastName": { "type": "string" },
        "category": { "type": "string", "enum": ["Docente", "Estudiante", "No Docente", "Externo"] },
        "email": { "type": "string", "format": "email" },
        "updatedAt": { "type": "string", "format": "date-time" }
      },
      "required": ["firstName", "lastName", "category"]
    },
    "Document": {
      "$schema": "http://json-schema.org/draft-07/schema#",
      "title": "Document",
      "type": "object",
      "description": "Represents a document stored in the VínculoAgro repository.",
      "properties": {
        "id": { "type": "string" },
        "title": { "type": "string" },
        "type": { "type": "string", "enum": ["Convenio", "Proyecto", "Movilidad", "Pasantía", "Resolución"] },
        "extensionDocType": { "type": "string" },
        "projectCode": { "type": "string" },
        "director": {
          "type": "object",
          "properties": {
            "firstName": { "type": "string" },
            "lastName": { "type": "string" }
          }
        },
        "authors": {
          "type": "array",
          "items": {
            "type": "object",
            "properties": {
              "firstName": { "type": "string" },
              "lastName": { "type": "string" }
            }
          }
        },
        "date": { "type": "string", "format": "date-time" },
        "uploadDate": { "type": "string", "format": "date-time" },
        "uploadedByUserId": { "type": "string" },
        "description": { "type": "string" },
        "fileUrl": { "type": "string" }
      },
      "required": ["id", "title", "type", "uploadDate"]
    }
  },
  "auth": {
    "providers": ["password"]
  },
  "firestore": {
    "structure": [
      {
        "path": "/users/{userId}",
        "definition": {
          "schema": { "$ref": "#/backend/entities/User" },
          "description": "Perfiles de usuario."
        }
      },
      {
        "path": "/staff/{staffId}",
        "definition": {
          "schema": { "$ref": "#/backend/entities/Staff" },
          "description": "Padrón de personas (Docentes, Estudiantes)."
        }
      },
      {
        "path": "/documents/{documentId}",
        "definition": {
          "schema": { "$ref": "#/backend/entities/Document" },
          "description": "Repositorio central de documentos."
        }
      }
    ]
  }
}
